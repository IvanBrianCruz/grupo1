    <link rel="shortcut icon" href="/img/logo-tienda.png">
    <link rel="stylesheet" href="/css/register.css">

    <!-- Link para cargar las fuentes de la página "Roboto" -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <!-- Link para cargar los iconos -->
    <script src="https://kit.fontawesome.com/b408879b64.js" crossorigin="anonymous"></script>


</head>

<body>
    
    <div class="area">
        <ul class="circles">
            <li></li>
            <li></li>
            <li></li>
            <div class="logocontenedor">
                <a href="http://localhost:3060/" id="logo">
                    <img class="logo" src="/img/logotiendanuevo2.png" alt="Logo" href="http://localhost:3000/">
                </a>
            </div>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
 
    <div class="content">
        
        <h2>Registro de Usuario</h2>

        <form id="registrationForm" action="/registro" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name">
                <small>Error message</small> <!-- Mensaje de error para el campo Apellido -->
            </div>
            <div class="form-group">
                <label for="apell">Apellido:</label>
                <input type="text" id="apell" name="apell">
                <small>Error message</small> <!-- Mensaje de error para el campo Apellido -->
            </div>
            <div class="form-group">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email">
                <small>Error message</small> <!-- Mensaje de error para el campo Apellido -->
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password">
                <small>Error message</small> <!-- Mensaje de error para el campo Apellido -->
            </div>
            <div class="form-group">
                <label for="password2">Repita la Contraseña:</label>
                <input type="password" id="password2" name="password2">
                <small>Error message</small> <!-- Mensaje de error para el campo Apellido -->
            </div>
            <div class="form-group">
                <label for="imagen">Imagen de Usuario:</label>
                <input type="file" id="imagen" name="imagen" accept="image/jpeg, image/png, image/gif">
                <small>Error message</small> <!-- Mensaje de error para el campo Apellido -->


            </div>
            <div class="form-row">
                <div class="datos-formulario">
                    <label for="categoria">Categorías</label>
                    <select id="categoria" name="categoria">
                        <option value="usuario">usuario</option>
                        <!-- Agrega más opciones de categorías aquí si es necesario -->
                    </select>
                </div>
            </div>
            <br>
            <button type="submit" id="submitButton">Registrarse</button>
        </form>


        <p class="already-account">¿Ya tienes una cuenta? <a href="http://localhost:3060/inicioDeSesion">Iniciar
                Sesión</a></p>
    </div>


</body>

</html>