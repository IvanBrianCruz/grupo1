<link rel="stylesheet" href="/css/userEdit.css">
<script src="https://kit.fontawesome.com/c08d71d1c1.js" crossorigin="anonymous"></script>
<%- include('partials/header1') %>
<body>
    <div class="formulario-conteiner">
        <div class="form-image">
            <h2>Bienvenidos! Mi Cuenta </h2> 
            <img src="/img/undraw_completed_38on (1).svg"> 
        </div>
        <div class="form">
            <form>
                <div class="form-header">
                    <h2 class="form-header-H2">Editar Perfil</h2>
                </div>
                <div class="form-box">
                    <div class="form-group">
                        <label for="profile-pic">Cambiar foto de Perfil:</label>
                        <input type="file" id="foto" name="foto" accept="image/*">
                    </div>
                    <div class="form-group">
                        <label for="full-name">Nombre y Apellido:</label>
                        <input type="text" id="full-name" name="full-name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Correo Electrónico:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="birthdate">Fecha de Nacimiento:</label>
                        <input type="date" id="birthdate" name="birthdate" required>
                    </div>
                    <div class="form-group">
                        <label for="address">Departamento:</label>
                        <input type="text" id="address" name="address" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Cambiar Contraseña:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <div class="form-group">
                        <label for="confirm-password">Confirmar Nueva Contraseña:</label>
                        <input type="password" id="confirm-password" name="confirm-password" required>
                    </div>
                    <div class="butones">
                        <!--Botoness--> 
                     <button type="button" id="save-button">Guardar Cambios</button>
                     <button type="button" id="discard-button">Descartar Cambios</button>
                    </div>
                </div>
            </form>
        </div>
        
    </div>
    <footer>
        <!-- footer -->
        <%- include('partials/footer') %>
            <!-- /footer -->
    </footer>
    

</body>
